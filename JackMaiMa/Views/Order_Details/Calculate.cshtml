@model JackMaiMa.ViewModels.Order_Detail_Create_ViewModel
@using JackMaiMa.Models

@{
    string header = "คำนวณ Order Detail";
    ViewBag.Title = header;
}

<h3>@header</h3>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Order_Detail.OrderId, "Order", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Order_Detail.OrderId, new SelectList(Model.Orders, "Id", "Name"), new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Order_Detail.ProductId, "สินค้า", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Order_Detail.ProductId, new SelectList(Model.Products, "Id", "Name"), new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Order_Detail.UnitPrice, "ราคาขายต่อหน่วย", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Order_Detail.UnitPrice, new { @class = "form-control", @readlonly = "true" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Order_Detail.Quantity, "จำนวนที่สั่ง", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Order_Detail.Quantity, new { @class = "form-control", @readlonly = "true" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Order_Detail.TotalPricePerDetail, "ยอดรวม", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Order_Detail.TotalPricePerDetail, new { @class = "form-control", @readlonly = "true" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Order_Detail.DiscountPerDetail, "ส่วนลด", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Order_Detail.DiscountPerDetail
                                , new { @class = "form-control", required = "required", type = "number", min = "0", placeholder = "ใส่ตัวเลขตั้งแต่ 0 ขึ้นไป" })
                @Html.ValidationMessageFor(m => m.Order_Detail.DiscountPerDetail, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(m => m.Order_Detail.Id)
        @Html.HiddenFor(m => m.Order_Detail.OrderId)
        @Html.HiddenFor(m => m.Order_Detail.ProductId)
        @Html.HiddenFor(m => m.Order_Detail.CreatedBy)
        @Html.HiddenFor(m => m.Order_Detail.CreateDate)
        @Html.HiddenFor(m => m.Order_Detail.ModifiedBy)
        @Html.HiddenFor(m => m.Order_Detail.ModifiedDate)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="บันทึก" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}